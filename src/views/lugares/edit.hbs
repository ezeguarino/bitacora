<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/lugares/edit/{{lugar.id}}" method="POST">

                        <div class="form-group">
                            <input type="text" class="form-control" name="nombre" value="{{lugar.nombre}}"
                                placeholder="Titulo" autofocus>
                        </div>

                        <div class="form-group">
                            <select name="rubro_id" class="form-control" required>
                                <option value={{lugar.rubro_id}} selected>{{lugar.rubro_nombre}}</option>
                                {{#each rubros}}
                                <option value={{id}}>{{nombre}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group">
                            <select name="pais_id" class="form-control" required>
                                <option value={{lugar.pais_id}} selected>{{lugar.pais_nombre}}</option>
                                {{#each paises}}
                                <option value={{id}}>{{nombre}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class=" form-group">
                            <input type="text" class="form-control" name="url" value="{{lugar.url}}" placeholder="URL">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="descripcion" placeholder="DescripciÃ³n"
                                rows="2">{{lugar.descripcion}}</textarea>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">Guardar</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>