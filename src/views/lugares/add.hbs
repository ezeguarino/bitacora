<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/lugares/add" method="POST">

                        <div class="form-group">
                            <input type="text" class="form-control" name="nombre" placeholder="Nombre del Lugar"
                                autofocus required>
                        </div>

                        <div class="form-group">
                            <select name="rubro_id" class="form-control" required>
                                <option value="" disabled selected>Seleccione un Rubro</option>
                                {{#each rubros}}
                                <option value={{id}}>{{nombre}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group">
                            <select name="pais_id" class="form-control" required>
                                <option value="" disabled selected>Seleccione un País</option>
                                {{#each paises}}
                                <option value={{id}}>{{nombre}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group">
                            <input type="url" class="form-control" name="url" placeholder="URL">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="descripcion" placeholder="Descripción"
                                rows="2"></textarea>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">Guardar</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>